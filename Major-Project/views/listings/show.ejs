<% layout("/layouts/boilerPlate") %>
<h3 class="text-center my-4"><%= listing.title %></h3>
<div class="card-1"><div class="card-2">
  <img src="<%= listing.image.url %>" class="card-img-top" alt="listing image">
  <div class="card-body">
     <p class="card-text">
   <i>owned by : <%= listing.owner.username %></i>
   </p>
    <p class="card-text"><%= listing.description %><br>â‚¹<%= listing.price.toLocaleString("en-IN") %>
      <br>
      <%= listing.location %>, <%= listing.country %>
    </p></div>
    </div>
  </div>
 <% if (currUser && listing.owner._id.toString() === currUser._id.toString()) { %>
<div class="listing-actions text-center mt-4">
  <a href="/listings/<%= listing._id %>/edit" class=" btn-edit me-2">Edit</a>
<form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="d-inline needs-validation " novalidate >
  <button class="btn-delete">Delete</button>
</form>
</div>
<% } %>
<%  if(currUser) {%>
<div class="col-8 offset-3 mb-3">
  <h4 class="mt-5 mb-3 text-center">Leave a Review</h4>
<form action="/reviews/<%= listing._id %>" method="POST" class="needs-validation" novalidate>

  <div class="mb-3">
    <label for="rating" class="form-label">Rating</label>
    <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range" required>
  </div>

  <div class="mb-3">
    <label for="comment" class="form-label">Comments</label>
    <textarea name="review[comment]" id="comment" cols="38" rows="5" class="form-control" required></textarea>
    <div class="invalid-feedback">Please add some comments for review</div>
  </div>

  <button class="btn btn-dark">Submit</button>
</form>
<% } %>
<hr class="my-4">

<h4 class="mb-3 text-center">All Reviews</h4>
<div class="row justify-content-center">
  <% for (review of listing.reviews) { %>
    <div class="col-md-6 mb-3">
      <div class="card shadow-sm border-0">
        <div class="card-body">
          <p class="card-text"> <%= review.author.username %></p>
          <p class="card-text"><strong>Comment:</strong> <%= review.comment %></p>
          <p class="card-text"><strong>Rating:</strong> <span class="badge bg-warning text-dark"><%= review.rating %> / 5</span></p>

          <form method="POST" action="/reviews/<%= listing._id %>/<%= review._id %>?_method=DELETE" class="mt-2">
            <button class="btn btn-sm btn-outline-danger">Delete Review</button>
          </form>
        </div>
      </div>
    </div>
  <% } %>
</div>