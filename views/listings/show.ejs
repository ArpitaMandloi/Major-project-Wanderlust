<% layout("layouts/boilerPlate") %>

<h3 class="text-center my-4"><%= listing.title %></h3>
<div class="card-1">
  <div class="card-2">
    <img src="<%= listing.image.url %>" class="card-img-top" alt="listing image">
    <div class="card-body">
      <p class="card-text">
        <i>owned by : <%= listing.owner.username %></i>
      </p>
      <p class="card-text">
        <%= listing.description %><br>
        â‚¹<%= listing.price.toLocaleString("en-IN") %><br>
        <%= listing.location %>, <%= listing.country %>
      </p>
      <div id="map" style="height: 400px;" class="mb-4 rounded shadow"></div>
      
    </div>
  </div>
</div>

<% if (currUser && listing.owner._id.toString() === currUser._id.toString()) { %>
  <div class="listing-actions text-center mt-4">
    <a href="/listings/<%= listing._id %>/edit" class="btn-edit me-2">Edit</a>
    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="d-inline needs-validation" novalidate>
      <button class="btn-delete">Delete</button>
    </form>
  </div>
<% } %>

<% if (currUser) { %>
  <div class="col-8 offset-3 mb-3">
    <h4 class="mt-5 mb-3 text-center">Leave a Review</h4>
    <form action="/reviews/<%= listing._id %>" method="POST" class="needs-validation" novalidate>

      <fieldset class="starability-slot">
        <legend>Rate this listing:</legend>
        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
        <label for="first-rate1" title="Terrible">1 star</label>
        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
        <label for="first-rate2" title="Not good">2 stars</label>
        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
        <label for="first-rate3" title="Average">3 stars</label>
        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
        <label for="first-rate4" title="Very good">4 stars</label>
        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
        <label for="first-rate5" title="Amazing">5 stars</label>
      </fieldset>

      <div class="mb-3">
        <label for="comment" class="form-label">Comments</label>
        <textarea name="review[comment]" id="comment" cols="38" rows="5" class="form-control" required></textarea>
        <div class="invalid-feedback">Please add some comments for review</div>
      </div>

      <button class="btn btn-dark">Submit</button>
    </form>
  </div>
<% } %>

<hr class="my-4">
<h4 class="mb-3 text-center">All Reviews</h4>
<div class="row justify-content-center">
  <% for (review of listing.reviews) { %>
    <div class="col-md-6 mb-3">
      <div class="card shadow-sm border-0">
        <div class="card-body">
          <p class="card-text"><%= review.author.username %></p>
          <p class="card-text"><strong>Comment:</strong> <%= review.comment %></p>
          <p class="card-text"><strong>Rating:</strong> <span class="badge bg-warning text-dark"><%= review.rating %> / 5</span></p>
          <p class="starability-result" data-rating="<%= review.rating %>">
            Rated: <%= review.rating %> stars
          </p>
          <form method="POST" action="/reviews/<%= listing._id %>/<%= review._id %>?_method=DELETE" class="mt-2">
            <button class="btn btn-sm btn-outline-danger">Delete Review</button>
          </form>
        </div>
      </div>
    </div>
  <% } %>
</div>


